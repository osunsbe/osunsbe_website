---
import Container from "./container.astro";
import { Astronav, MenuItems, MenuIcon, StickyHeader } from "astro-navbar";
import Logo from "../assets/otherImgs/logo.svg";
import Image from "astro/components/Image.astro";

const menuitems = [
    {
        title: "About Us",
        path: "/about",
    },
    {
        title: "Officers",
        path: "/board",
    },
    {
        title: "Events",
        path: "/events",
    },
    {
        title: "Alumni",
        path: "/alumni"
    },
    {
        title: "Sponsor",
        path: "/sponsor",
    },
    {
        title: "Contact Us",
        path: "#bottom-of-page",
        class: "flex bg-black text-white py-2 px-4 rounded hover:bg-gray-800 mr-8"
    }
];
---

<StickyHeader
    class="sticky top-0 border-b z-50 transition-all"
    scrollY={40}
    defaultClass="py-5 border-transparent"
    activeClass="py-2 bg-white/80 border-gray-200 backdrop-blur-lg"
>
    <Container>
        <header class="flex flex-col lg:flex-row justify-between items-center">
            <Astronav>
                <div class="flex w-full lg:w-auto items-center justify-between">
                    <a href="/" class="">
                        <Image
                            src={Logo}
                            alt="Oregon State NSBE"
                            loading="lazy"
                            width={250}
                        />
                    </a>
                    <div class="block lg:hidden">
                        <MenuIcon class="w-4 h-4 text-gray-800" />
                    </div>
                </div>
                <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
                    <ul class="flex flex-col lg:flex-row lg:gap-1">
                        {
                            menuitems.map((item, index) => (
                                <li>
                                    <a
                                        href={item.path}
                                        class={`flex items-center justify-center py-2 px-4 ${item.class || "text-gray-600 hover:text-gray-900"}`}
                                    >
                                        <span> {item.title}</span>
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </MenuItems>
            </Astronav>
        </header>
    </Container>
</StickyHeader>
